# Окружение: development или production
NODE_ENV=production

# Порт, на котором будет запущен сервер
PORT=3000

# Строка подключения к базе данных PostgreSQL
DATABASE_URL=postgres://sportext_user:your_secure_password@localhost:5432/sportext_db

# Административный API-ключ для защиты эндпоинтов
ADMIN_API_KEY=f7e2b3a1d4c6b8e9f0123456789abcdef

# Пути к SSL-сертификату и приватному ключу (используются в production)
SSL_KEY_PATH=/path/to/your/privkey.pem
SSL_CERT_PATH=/path/to/your/fullchain.pem